<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>pt</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.mensagens</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    
    <converter>
        <display-name>TeatroConverter</display-name>
        <converter-id>TeatroConverter</converter-id>
        <converter-class>br.ufscar.dc.dsw.converter.TeatroConverter</converter-class>
    </converter>
     
    <factory>
        <exception-handler-factory>
            br.ufscar.dc.dsw.exceptions.CustomExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
      
</faces-config>
